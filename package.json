{
  "name": "allo-scrapper",
  "version": "1.0.0",
  "description": "Agrégateur de séances de cinéma basé sur les données Allociné",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "npm run scrape && astro build",
    "preview": "astro preview",
    "test": "tsx --test src/**/*.test.ts",
    "scrape": "tsx src/scraper/index.ts",
    "scrape:week": "tsx src/scraper/index.ts --week",
    "db:migrate": "tsx src/db/migrations.ts"
  },
  "keywords": [
    "allocine",
    "cinema",
    "scraper",
    "showtimes"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@astrojs/tailwind": "^6.0.1",
    "@libsql/client": "^0.17.0",
    "astro": "^5.1.3",
    "cheerio": "^1.0.0",
    "dotenv": "^17.3.1",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
