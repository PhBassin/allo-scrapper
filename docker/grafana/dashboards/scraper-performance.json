{
  "id": null,
  "uid": "scraper-perf",
  "title": "Scraper Performance",
  "tags": ["scraper", "allo-scrapper"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": { "from": "now-6h", "to": "now" },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Total Scrape Jobs",
      "datasource": { "uid": "prometheus" },
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(scrape_jobs_total)",
          "legendFormat": "Total"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "auto", "textMode": "auto", "colorMode": "value" }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Successful Jobs",
      "datasource": { "uid": "prometheus" },
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(scrape_jobs_total{status='success'})",
          "legendFormat": "Success"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "auto", "textMode": "auto", "colorMode": "value", "thresholds": { "steps": [{ "value": 0, "color": "green" }] } }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Failed Jobs",
      "datasource": { "uid": "prometheus" },
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(scrape_jobs_total{status='failed'}) or vector(0)",
          "legendFormat": "Failed"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "auto", "textMode": "auto", "colorMode": "value", "thresholds": { "steps": [{ "value": 0, "color": "green" }, { "value": 1, "color": "red" }] } }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Total Films Scraped",
      "datasource": { "uid": "prometheus" },
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(films_scraped_total)",
          "legendFormat": "Films"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "auto", "textMode": "auto", "colorMode": "value" }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Scrape Job Rate (per minute)",
      "datasource": { "uid": "prometheus" },
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(scrape_jobs_total[5m]) * 60",
          "legendFormat": "{{ status }}"
        }
      ]
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Scrape Duration (p50 / p95 / p99)",
      "datasource": { "uid": "prometheus" },
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(scrape_duration_seconds_bucket[5m]))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, rate(scrape_duration_seconds_bucket[5m]))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, rate(scrape_duration_seconds_bucket[5m]))",
          "legendFormat": "p99"
        }
      ]
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "Films & Showtimes Scraped (rate)",
      "datasource": { "uid": "prometheus" },
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 8 },
      "targets": [
        {
          "expr": "rate(films_scraped_total[5m]) * 60",
          "legendFormat": "Films/min"
        },
        {
          "expr": "rate(showtimes_scraped_total[5m]) * 60",
          "legendFormat": "Showtimes/min"
        }
      ]
    }
  ]
}
