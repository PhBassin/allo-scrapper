{
  "id": null,
  "uid": "infra",
  "title": "Infrastructure",
  "tags": ["infra", "allo-scrapper"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "id": 1,
      "type": "row",
      "title": "PostgreSQL",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "id": 2,
      "type": "stat",
      "title": "PG Active Connections",
      "datasource": { "uid": "prometheus" },
      "gridPos": { "x": 0, "y": 1, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "pg_stat_activity_count{datname=~\"$__all\"}",
          "legendFormat": "Active"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "auto", "textMode": "auto", "colorMode": "value" }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "PG Database Size (MB)",
      "datasource": { "uid": "prometheus" },
      "gridPos": { "x": 6, "y": 1, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "pg_database_size_bytes / 1024 / 1024",
          "legendFormat": "{{ datname }}"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "auto", "textMode": "auto", "colorMode": "value", "unit": "decmbytes" }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "PG Transactions/s",
      "datasource": { "uid": "prometheus" },
      "gridPos": { "x": 12, "y": 1, "w": 12, "h": 4 },
      "targets": [
        {
          "expr": "rate(pg_stat_database_xact_commit_total[5m])",
          "legendFormat": "commits/s"
        },
        {
          "expr": "rate(pg_stat_database_xact_rollback_total[5m])",
          "legendFormat": "rollbacks/s"
        }
      ]
    },
    {
      "id": 5,
      "type": "row",
      "title": "Redis",
      "gridPos": { "x": 0, "y": 5, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "id": 6,
      "type": "stat",
      "title": "Redis Connected Clients",
      "datasource": { "uid": "prometheus" },
      "gridPos": { "x": 0, "y": 6, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "redis_connected_clients",
          "legendFormat": "Clients"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "auto", "textMode": "auto", "colorMode": "value" }
    },
    {
      "id": 7,
      "type": "stat",
      "title": "Redis Memory Used (MB)",
      "datasource": { "uid": "prometheus" },
      "gridPos": { "x": 6, "y": 6, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "redis_memory_used_bytes / 1024 / 1024",
          "legendFormat": "Used MB"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "auto", "textMode": "auto", "colorMode": "value", "unit": "decmbytes" }
    },
    {
      "id": 8,
      "type": "stat",
      "title": "Scrape Jobs Queue Length",
      "datasource": { "uid": "prometheus" },
      "gridPos": { "x": 12, "y": 6, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "redis_list_length{list=\"scrape:jobs\"} or vector(0)",
          "legendFormat": "Queue depth"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "auto", "textMode": "auto", "colorMode": "background",
        "thresholds": { "steps": [{ "value": 0, "color": "green" }, { "value": 5, "color": "yellow" }, { "value": 10, "color": "red" }] }
      }
    },
    {
      "id": 9,
      "type": "timeseries",
      "title": "Redis Ops/s",
      "datasource": { "uid": "prometheus" },
      "gridPos": { "x": 18, "y": 6, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "rate(redis_commands_processed_total[5m])",
          "legendFormat": "ops/s"
        }
      ]
    },
    {
      "id": 10,
      "type": "row",
      "title": "Node.js Process (scraper)",
      "gridPos": { "x": 0, "y": 10, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "id": 11,
      "type": "timeseries",
      "title": "Scraper Heap Used (MB)",
      "datasource": { "uid": "prometheus" },
      "gridPos": { "x": 0, "y": 11, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "nodejs_heap_size_used_bytes{job=\"ics-scraper\"} / 1024 / 1024",
          "legendFormat": "heap used MB"
        },
        {
          "expr": "nodejs_heap_size_total_bytes{job=\"ics-scraper\"} / 1024 / 1024",
          "legendFormat": "heap total MB"
        }
      ]
    },
    {
      "id": 12,
      "type": "timeseries",
      "title": "Backend Heap Used (MB)",
      "datasource": { "uid": "prometheus" },
      "gridPos": { "x": 12, "y": 11, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "nodejs_heap_size_used_bytes{job=\"ics-web\"} / 1024 / 1024",
          "legendFormat": "heap used MB"
        },
        {
          "expr": "nodejs_heap_size_total_bytes{job=\"ics-web\"} / 1024 / 1024",
          "legendFormat": "heap total MB"
        }
      ]
    }
  ]
}
